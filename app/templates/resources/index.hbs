<div class="container col-md-6 col-md-offset-3">
  <ul class="list-group">
    {{#each resource as |r|}}
     <li class="list-group-item active">
      {{#link-to 'resources.resource' r}}
         <h5>{{resource.title}}</h5> 
     {{/link-to}}</li>
         <li class="list-group-item"><p>topic: {{r.topic}}</p></li>
         <li class="list-group-item"><p>url: {{r.url}}</p></li>
    {{/each}}
  </ul>
</div>
